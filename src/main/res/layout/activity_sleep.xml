<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:text="Back" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="38dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:text="Sleep Tracker"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:background="@color/purple_500"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/result_label"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="31dp" />

    <GridLayout
        android:id="@+id/checkbox_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignBounds"
        android:columnCount="4"
        android:columnOrderPreserved="false"
        android:rowCount="12"
        android:useDefaultMargins="true">

        <CheckBox
            android:id="@+id/checkbox_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00" />

        <CheckBox
            android:id="@+id/checkbox_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01:00" />

        <CheckBox
            android:id="@+id/checkbox_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02:00" />

        <CheckBox
            android:id="@+id/checkbox_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03:00" />

        <CheckBox
            android:id="@+id/checkbox_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04:00" />

        <CheckBox
            android:id="@+id/checkbox_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:00" />

        <CheckBox
            android:id="@+id/checkbox_06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06:00" />

        <CheckBox
            android:id="@+id/checkbox_07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:00" />

        <CheckBox
            android:id="@+id/checkbox_08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00" />

        <CheckBox
            android:id="@+id/checkbox_09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:00" />

        <CheckBox
            android:id="@+id/checkbox_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00" />

        <CheckBox
            android:id="@+id/checkbox_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:00" />

        <CheckBox
            android:id="@+id/checkbox_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00" />

        <CheckBox
            android:id="@+id/checkbox_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:text="13:00pm" />

        <CheckBox
            android:id="@+id/checkbox_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:00pm" />

        <CheckBox
            android:id="@+id/checkbox_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:00" />

        <CheckBox
            android:id="@+id/checkbox_16"
